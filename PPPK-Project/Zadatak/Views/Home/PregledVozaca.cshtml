@model IEnumerable<Zadatak.Models.Driver>

@{
    ViewBag.Title = "PregledVozaca";
}

<h2>Pregled vozača</h2>

<p>
    @Html.ActionLink("Nazad na meni", "Meni", "Home");
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.IDDriver)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobilePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DriversLicenseNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.IDDriver)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobilePhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DriversLicenseNumber)
        </td>
        <td>
            @Html.ActionLink("Uredi", "UrediVozaca", new { id = item.IDDriver }) |
            @Html.ActionLink("Obriši", "ObrisiVozaca", new { id = item.IDDriver })
        </td>
    </tr>
}

</table>
