@model IEnumerable<ZadatakEntity.ServiceVehicle>

@{
    ViewBag.Title = "PrikaziServise";
}

<h2>Prikaži servise</h2>

<p>
    @Html.ActionLink("Nazad na meni", "MeniOptions", "Home");
</p>

<p>
    @Html.ActionLink("Nazad na prikaz vozila", "PrikaziVozila", "Home");
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDServiceVehicle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangeTire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangeBelt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDServiceVehicle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChangeTire)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChangeBelt)
        </td>
        <td>
            @Html.ActionLink("Edit", "UrediServis", new { id = item.IDServiceVehicle }) |
            @Html.ActionLink("Delete", "ObrisiServis", new { id = item.IDServiceVehicle }) |
            @Html.ActionLink("Stavke", "PrikaziStavke", new { id = item.IDServiceVehicle }) 
        </td>
    </tr>
}

</table>
